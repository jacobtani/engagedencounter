<div class="container">
  <%= bootstrap_form_for(@registered_couple, layout: :horizontal)  do |f| %>
    <%= f.alert_message "Please fix the errors below." %>
    <%= f.text_field :first_name, placeholder: "Enter your first name", class: "form-control required", control_col: "col-sm-8", autofocus: true, label: "First Name" %>
    <%= f.text_field :surname, placeholder: "Enter your surname", class: "form-control required", control_col: "col-sm-8", label: "Surname" %>
    <%= f.text_field :preferred_name, placeholder: "Enter your preferred name", class: "form-control required", control_col: "col-sm-8", label: "Preferred Name" %>
    <%= f.number_field :age, placeholder: "Enter your age", class: "form-control required", control_col: "col-sm-8" %>
    <%= f.text_field :email, placeholder: "Enter your email", class: "form-control required", control_col: "col-sm-8" %>
    <%= f.text_field :address, placeholder: "Enter your address", class: "form-control required", control_col: "col-sm-8" %>
    <%= f.text_field :phone_number, placeholder: "Enter your phone number", class: "form-control required", control_col: "col-sm-8", label: "Phone Number" %>
    <%= f.date_field :wedding_date, placeholder: "Enter your wedding date", class: "form-control required", control_col: "col-sm-8", label: "Wedding Date" %>
    <%= f.collection_select :preferred_event, Event.all, :id, :event_date, prompt: 'Select event', class: 'form-control required', control_col: "col-sm-8", label: "Preferred Event" %>
    <%= f.select :religion, RegisteredCouple.religion_types.keys.to_a, control_col: "col-sm-8", label: "Religion", :selected => 'CATHOLIC'%>
    <%= f.text_field :parish, placeholder: "Enter your parish", class: "form-control required", control_col: "col-sm-8" %>
    <%= f.text_field :fiance_first_name, placeholder: "Enter your fiances first name", class: "form-control required", control_col: "col-sm-8", autofocus: true, label: "Fiance First Name" %>
    <%= f.text_field :fiance_surname, placeholder: "Enter your fiances surname", class: "form-control required", control_col: "col-sm-8", label: "Fiance Surname" %>
    <%= f.text_field :fiance_preferred_name, placeholder: "Enter your fiances preferred name", class: "form-control required", control_col: "col-sm-8", label: "Fiance Preferred Name" %>
    <%= f.number_field :fiance_age, placeholder: "Enter your fiances age", class: "form-control required", control_col: "col-sm-8" %>
    <%= f.text_field :fiance_email, placeholder: "Enter your fiances email", class: "form-control required", control_col: "col-sm-8" %>
    <%= f.text_field :fiance_address, placeholder: "Enter your fiances address", class: "form-control required", control_col: "col-sm-8" %>
    <%= f.text_field :fiance_phone_number, placeholder: "Enter your fiances phone number", class: "form-control required", control_col: "col-sm-8", label: "Fiance Phone Number" %>
    <%= f.select :fiance_religion, RegisteredCouple.religion_types.keys.to_a, control_col: "col-sm-8", label: "Religion", :selected => 'CATHOLIC'%>
    <%= f.text_field :fiance_parish, placeholder: "Enter your fiances parish", class: "form-control required", control_col: "col-sm-8" %>
    <%= f.text_field :post_wedding_address, placeholder: "Enter your post wedding address or 'Unknown' if necessary", class: "form-control required", control_col: "col-sm-8", label: "Post Wedding Address" %>
    <%= f.text_field :dietary_requirements, placeholder: "Enter you or your fiances dietary requirements (if any)", class: "form-control required", control_col: "col-sm-8", label: "Dietary Requirements" %>
    <%= button_tag(type: "submit", class: "hollow button", id: "send-registration-link", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving..."}) do %>
      Save
    <% end %>
  <% end %>
</div>
