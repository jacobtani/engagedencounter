<div class="container all-attendees">
  <h2>Attendees</h2>
  <div class="pull-right">
    <%= link_to "Add Attendee", new_attendee_path, class: "hollow button", id: "new-attendee-link" %>
    <%= link_to "Download PDF", attendees_path(format: "pdf"), class: "hollow button" %>
  </div>
  <div class="table wrapper">
    <div class="table-row">
      <div class="table-head">Name</div>
      <div class="table-head">Preferred Name</div>
      <div class="table-head">Age</div>
      <div class="table-head">Address</div>
      <div class="table-head">Phone</div>
      <div class="table-head">Email</div>
      <div class="table-head">Fiance</div>
      <div class="table-head">Event</div>
      <div class="table-head">ReligionParish</div>
      <div class="table-head">WdngDate</div>
      <div class="table-head">DietaryReqs</div>
      <div class="table-head">Admin</div>
    </div>
    <% @attendees.each do |attendee| %>
      <div class="table-row">
        <div class="table-cell"><%= [attendee.first_name, attendee.surname].join(' ') %></div>
        <div class="table-cell"><%= attendee.preferred_name %></div>
        <div class="table-cell"><%= attendee.age %></div>
        <div class="table-cell"><%= attendee.address %></div>
        <div class="table-cell"><%= attendee.phone_number %></div>
        <div class="table-cell"><%= attendee.email %></div>
        <div class="table-cell"><%= attendee.fiance_full_name %></div>
        <div class="table-cell"><%= attendee.event.event_date.to_s %></div>
        <div class="table-cell"><%= [attendee.parish, attendee.religion].join('-') %></div>
        <div class="table-cell"><%= attendee.wedding_date %></div>
        <div class="table-cell"><%= attendee.dietary_requirements %></div>
        <div class="table-cell"><%= link_to "Edit", edit_attendee_path(id: attendee.id), class: "hollow button", id: "edit-attendee-link" %><%= link_to "Delete", attendee_path(attendee), method: :delete, class: "hollow button", id: "delete-attendee-link" %></div>
      </div>
    <% end %>
  </div>
</div>
